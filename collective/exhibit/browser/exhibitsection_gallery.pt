<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<head>
  <metal:js fill-slot="javascript_head_slot">
  </metal:js>
</head>

<body>

<metal:main fill-slot="content-core">
  <a class="ExhibitImage"
     tal:define="image_view context/@@images;
                 image_preview image_view/image/large|nothing;
                 image_url string:${context/absolute_url}/@@images/image/large"
     tal:attributes="href image_url;
                     title context/Title"
     tal:content="structure image_preview">
    <img src="some_image.jpg" alt="title" />
  </a>
  <div class="ExhibitSectionText"
       tal:content="structure context/text/output|nothing">
    Full text
  </div>
  <h3>Exhibit Items</h3>
  <div id="exhibit-section-items"
      tal:define="items python:context.listFolderContents({'portal_type': 'collective.exhibit.exhibititem'});">
    <tal:items tal:repeat="item items">
      <div tal:define="item_url item/absolute_url;
                      item_title item/Title|nothing;
                      orig_url item/collection_item_url|string:'Cannot Access';
                      image item/@@images/image/mini|nothing"
          tal:condition="python:orig_url != 'Cannot Access'">
        <div class="ExhibitItemImage">
          <a href="#"
             tal:attributes="title item_title;
                             href item_url;">
            <img class="ExhibitItemThumb"
                 tal:condition="nocall:image"
                 tal:attributes="src string:${item_url}/@@images/image/mini;
                                 alt item_title;" />
          </a>
        </div>
        <div class="ExhibitItemDescription">
          <a href="#"
             tal:attributes="title item_title;
                             href item_url;">
            <span class="ExhibitItemTitle" tal:content="item_title">Title</span>
          </a>
          <p tal:content="item/Description">Description</p>
        </div>
      </div>
    </tal:items>
  </div>
</metal:main>

</body>
</html>
