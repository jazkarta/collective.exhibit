<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<head>
  <metal:js fill-slot="javascript_head_slot">
  </metal:js>
</head>

<body>

<metal:main fill-slot="content-core">
  <div class="ExhibitSectionText"
       tal:content="structure context/text/output|nothing">
    Full text
  </div>
  <h3>Collection</h3>
  <ul id="exhibit-section-items"
      tal:define="items python:context.listFolderContents({'portal_type': 'collective.exhibit.exhibititem'});">
    <tal:items tal:repeat="item items">
      <li tal:define="item_url item/absolute_url;
                      item_title item/Title|nothing;
                      orig_url item/collection_item_url|string:'Cannot Access'"
          tal:condition="python:orig_url != 'Cannot Access'">
        <a href="#"
           tal:attributes="title item_title;
                           href item_url;">
          <img class="ExhibitItemThumb"
               tal:attributes="src string:${item_url}/@@images/image/mini;
                               alt item_title;" />
          <span class="ExhibitItemTitle" tal:content="item_title">Title</span>
        </a>
        <div class="ExhibitItemDescription" tal:content="item/Description">
          Description
        </div>
      </li>
    </tal:items>
  </ul>
</metal:main>

</body>
</html>
