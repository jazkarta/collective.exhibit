<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<head>
  <metal:js fill-slot="javascript_head_slot">
    <script>
      $(function () {
        $('.exhibitItemPreview').tooltip({ position: "bottom center", relative: true});
      });
    </script>
  </metal:js>
</head>

<body>

<metal:main fill-slot="content-core"
            tal:define="image_view context/@@images;
                        image_preview image_view/image/large|nothing;
                        image_url string:${context/absolute_url}/@@images/image/large">
  <a href=""
     class="ExhibitItemImage"
     tal:condition="nocall:image_preview"
     tal:attributes="href image_url;
                     title context/Title"
     tal:content="structure image_preview">
    <img src="some_image.jpg" alt="title" />
  </a>
  <div class="ExhibitItemText" tal:content="structure context/getText">
    Full Text
  </div>
  <a class="FullExhibitItemLink"
     href="#"
     tal:define="item_url context/collection_item_url|nothing;
                 show_link context/show_more_link|nothing"
     tal:condition="python:item_url and show_link"
     tal:attributes="href item_url">More information ...</a>

<div class="exhibitItemListing">
  <h3>Exhibit Items</h3>
  <div tal:repeat="item python:context.listFolderContents({'portal_type': 'collective.exhibit.exhibititem'})"
       style="float:left; margin:10px 10px 5px 0px">
    <a class="exhibitItemPreview" tal:attributes="href item/absolute_url"
       tal:define="image_view item/@@images;
                   image_preview image_view/image/thumb|nothing;">
      <img tal:replace="structure image_preview" src="some_image.jpg" />
    </a>
    <div class="tooltip" style="display:none;height:300px;width:300px;background-color:#ffffff;border:1px solid #
cc9;padding:3px;">
    <a tal:define="image_view item/@@images;
                   image_preview image_view/image/preview|nothing;"
       tal:attributes="href item/absolute_url;
                       title item/Title">
      <img tal:replace="structure image_preview" src="some_image.jpg" />
    </a>
    <h3 tal:content="item/Title">Title</h3>
    <p tal:content="item/Description">Description</p>
    </div>
  </div>
</div>

</metal:main>

</body>
</html>
