<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<head>
  <metal:js fill-slot="javascript_head_slot">
  </metal:js>
</head>

<body>

<metal:main fill-slot="content-core">
<a class="ExhibitImage"
   tal:define="image_view context/@@images;
               image_preview image_view/image/preview|nothing;
               image_url string:${context/absolute_url}/@@images/image"
   tal:attributes="href image_url;
                   title context/Title"
   tal:content="structure image_preview">
  <img src="some_image.jpg" alt="title" />
</a>
<div class="ExhibitText"
     tal:condition="context/text"
     tal:content="structure context/text/output">
</div>
<h3 class="exhibit-subtitle">Contents</h3>
<ul id="exhibit-contents"
    tal:define="pages python:context.listFolderContents({'portal_type': ['Document', 'Topic']});
                sections python:context.listFolderContents({'portal_type': 'collective.exhibit.exhibitsection'});"
                >
<li class="PageLink" tal:repeat="page pages">
<a href="#"
   tal:attributes="href page/absolute_url"
   tal:content="page/Title">page</a>
</li>
<li class="SectionLink" tal:repeat="section sections">
<a href="#"
   tal:attributes="href section/absolute_url"
   tal:content="section/Title">section</a>
</li>
</ul>
</metal:main>

</body>
</html>
