<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<head>
  <metal:js fill-slot="javascript_head_slot">
  </metal:js>
</head>

<body>

<metal:main fill-slot="content-core">
<a class="ExhibitImage"
   tal:define="image_view context/@@images;
               image_preview image_view/image/large|nothing;
               image_url string:${context/absolute_url}/@@images/image/large"
   tal:attributes="href image_url;
                   title context/Title"
   tal:content="structure image_preview">
  <img src="some_image.jpg" alt="title" />
</a>
<div class="ExhibitText"
     tal:condition="context/text"
     tal:content="structure context/text/output">
</div>
<h3 class="exhibit-subtitle">Exhibit Sections</h3>
<ul id="exhibit-contents"
    tal:define="sections python:context.listFolderContents({'portal_type': 'collective.exhibit.exhibitsection'});">
  <tal:sections repeat="section sections">
  <li class="SectionLink"
      tal:define="item_url section/absolute_url;
                  item_title section/Title|nothing;
                  image section/@@images/image/mini|nothing">
    <a href="#"
       tal:attributes="title item_title;
                       href item_url;">
      <img class="ExhibitSectionThumb"
           tal:condition="nocall:image"
           tal:attributes="src string:${item_url}/@@images/image/thumb;
                           alt item_title;" />
      <span class="ExhibitSectionTitle" tal:content="item_title">Title</span>
    </a>
    <div class="ExhibitSectionDescription" tal:content="section/Description">
      Description
    </div>
  </li>
  </tal:sections>
</ul>
</metal:main>

</body>
</html>
